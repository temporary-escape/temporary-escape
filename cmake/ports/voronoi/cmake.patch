+cmake_minimum_required(VERSION 3.21)
+
+project(Voronoi)
+
+set(SOURCES "${CMAKE_CURRENT_LIST_DIR}/src/jc_voronoi_clip.h" "${CMAKE_CURRENT_LIST_DIR}/src/jc_voronoi.h")
+
+add_library(Voronoi INTERFACE ${SOURCES})
+add_library(Voronoi::Voronoi ALIAS Voronoi)
+set_target_properties(Voronoi PROPERTIES C_STANDARD 11)
+
+target_include_directories(Voronoi INTERFACE
+    $<BUILD_INTERFACE:${PROJECT_SOURCE_DIR}/include>
+    $<INSTALL_INTERFACE:include>
+)
+
+include(CMakePackageConfigHelpers)
+write_basic_package_version_file(
+    "${PROJECT_BINARY_DIR}/VoronoiConfigVersion.cmake"
