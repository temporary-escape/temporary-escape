+    COMPATIBILITY AnyNewerVersion
+)
+
+install(TARGETS Voronoi
+    EXPORT VoronoiTargets
+    LIBRARY DESTINATION lib COMPONENT Runtime
+    ARCHIVE DESTINATION lib COMPONENT Development
+    RUNTIME DESTINATION bin COMPONENT Runtime
+    PUBLIC_HEADER DESTINATION include COMPONENT Development
+    BUNDLE DESTINATION bin COMPONENT Runtime
+)
+
+include(CMakePackageConfigHelpers)
+configure_package_config_file(
+    "${CMAKE_CURRENT_LIST_DIR}/VoronoiConfig.cmake.in"
+    "${PROJECT_BINARY_DIR}/VoronoiConfig.cmake"
+    INSTALL_DESTINATION share/Voronoi
+)
+
+install(EXPORT VoronoiTargets DESTINATION share/Voronoi)
+install(FILES "${PROJECT_BINARY_DIR}/VoronoiConfigVersion.cmake"
+              "${PROJECT_BINARY_DIR}/VoronoiConfig.cmake"
+        DESTINATION share/Voronoi)
+
+install(FILES ${SOURCES} DESTINATION include)
